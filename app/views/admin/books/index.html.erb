<table>
  <thead>
  <tr>
    <th><a href="?sort_by=publisher_id"><%= t(:publisher)%></a></th>
    <th><a href="?sort_by=title"><%= t(:title)%></a></th>
    <th><a href="?sort_by=isbn">ISBN</a></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% for book in @books %>
      <tr>
        <td><%=h book.publisher.name %></td>
        <td><%=h book.title %></td>
        <td><%=h book.isbn %></td>
        <td><%= link_to t(:show_it), :action => 'show', :id => book %></td>
        <td><%= link_to t(:edit_it), :action => 'edit', :id => book %></td>
        <td><%= link_to t(:destroy_it), book,
                        :method => :delete, data: { confirm: t(:are_you_shure_delete)} %></td>
      </tr>
  <% end %>
  <tbody>
</table>
<%= will_paginate @books %>
<br />
<%= link_to t(:new_book), :action => 'new' %>