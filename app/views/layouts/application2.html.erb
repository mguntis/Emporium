<!--</div>-->

<div id="navigation">
  <ul>
    <% if session[:user_id] %>
        <li><a href="/admin/author"><%= t(:authors)%></a>&nbsp;|&nbsp;</li>
        <li><a href="/admin/publishers"><%= t(:publisher)%></a>&nbsp;|&nbsp;</li>
        <li><a href="/admin/books"><%= t(:books)%></a>&nbsp;|&nbsp;</li>
        <li><a href="/catalog"><%= t(:catalog)%></a>&nbsp;|&nbsp;</li>
        <li><a href="/about"><%= t(:about)%></a>&nbsp;</li>
        <li><a href="/logout">LogOut</a>&nbsp;|&nbsp;</li>
    <% else %>
        <li><a href="/catalog"><%= t(:catalog)%></a>&nbsp;|&nbsp;</li>
        <li><a href="/about"><%= t(:about)%></a>&nbsp;|&nbsp;</li>
        <li><a href="/login">Login</a>&nbsp;|&nbsp;</li>
        <li><a href="/signup">SignUp</a>&nbsp;|&nbsp;</li>
    <% end %>
  </ul>
</div>

  <div id="main">
    <div id="content">
      <%= "<h1>#{@page_title}</h1>".html_safe if @page_title %>
      <% if flash[:notice] %>
          <div id="notice">
            <%= flash[:notice] %>
          </div>
      <% end %>
      <%= yield %>
    </div>

    <div id="sidebar">
      <div class="box">
        <h2>Cart</h2>
        <ul>

        </ul>
      </div>
      <div class="cl"></div>
    </div>

    <div class="cl"></div>


    <div id="footer-bottom">
      <p>&copy; 2016 Emporium</p>
    </div>
    <div class="cl"></div>

  </div>
  </div>

</body>
</html>